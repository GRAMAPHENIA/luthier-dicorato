<style>
  .container {
    background: #20252d68;
  }
  span {
    color: var(--span);
  }

  .tarjeta-container {
    overflow: hidden;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-gap: 10px;
    padding: 3rem;
  }

  @media (max-width: 1300px) {
    .tarjeta-container {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    .tarjeta {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }

  .contenedor {
    position: relative;
  }

  .imagen-contenedor {
    position: relative;
    width: 300px;
    height: 300px;
    overflow: hidden;
    background: var(--fondo-parrafo);
    border-radius: 1rem 1rem 0 0;
    border: 2px solid var(--borde-parrafo);
    border-bottom: 6px solid #9e2c3bc8;
  }

  .imagen-tapar {
    width: 300px;
    height: 300px;
    position: relative;
    z-index: 1;
    transition:
      opacity 0.3s,
      transform 0.3s;
    border-radius: 1rem 1rem 0 0;
  }

  .texto-oculto {
    position: absolute;
    bottom: 2px;
    left: 25px;
    z-index: 0;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .tarjeta {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .detalles {
    background: #2e3c4ad3;
    border: none;
    color: aliceblue;
    padding: 10px;
    margin-top: 10px;
    width: auto;
    cursor: pointer;
    border-radius: 0.5rem;
  }

  .detalles:hover {
    background: #3d566ed3;
    color: var(--fuente-light);
  }

  .imagen-contenedor:hover .imagen-tapar {
    transform: translateY(-50px);
  }

  .imagen-contenedor:hover + .texto-oculto {
    opacity: 1;
  }

  .puntero {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 2;
    color: #7891a8e7;
    border: 2px solid #3d566eb6;
    padding: 8px 8px 4px 8px;
    border-radius: 50%;
    background: var(--fondo-parrafo);
  }

  /* ðŸ”´ MODAL ðŸ”´ */

  .modalDialog {
    height: 100vh;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding-bottom: 0;
    background: var(--fondo-dark);
    z-index: 5;
    opacity: 0;
    transition: opacity 200ms ease-in;
    pointer-events: none;
    overflow: hidden;
    text-align: center;
  }

  .modalDialog:target {
    opacity: 1;
    pointer-events: auto;
  }
  .modalDialog > div {
    width: auto;
    height: 600px;
    position: relative;
    padding: 5px;
    border-radius: 10px;
    transition: opacity 400ms ease-in;
    display: grid;
  }
  .close {
    font-size: 40px;
    margin-top: 20px;
  }

  a {
    color: aliceblue;
    text-decoration: none;
  }
  a:hover {
    color: salmon;
  }

  /* ðŸ”´ IMAGEN DETALLES ðŸ”´ */

  .modal {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .imagen-detalles {
    height: 40%;
    max-height: 600px;
    max-width: 100%;
    border-radius: 1rem;
  }
</style>
