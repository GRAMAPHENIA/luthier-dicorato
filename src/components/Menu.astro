<style>
 .modalDialog {
    height: 100vh;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding-bottom: 0; /* Elimina el padding */
    background: #09090e;
    z-index: 5;
    opacity: 0;
    -webkit-transition: opacity 200ms ease-in;
    -moz-transition: opacity 200ms ease-in;
    transition: opacity 200ms ease-in;
    pointer-events: none;
    overflow: hidden;
}

  .modalDialog:target {
    opacity: 1;
    pointer-events: auto;
  }
  .modalDialog > div {
    width: auto;
    height: 600px;
    position: relative;
    padding: 5px;
    border-radius: 10px;
    -webkit-transition: opacity 400ms ease-in;
    -moz-transition: opacity 400ms ease-in;
    transition: opacity 400ms ease-in;
    display: grid;
  }
  .close {
    font-size: 40px;
    margin-top: 20px;
  }

  a {
    color: aliceblue;
    text-decoration: none;
    font-size: 30px;
  }
  a:hover {
    color: salmon;
  }
</style>
